
.col-2-12.empty


.col-8-12


  .col-1-2
    | {{#if user.is_admin}}
    | {{#linkTo "posts.new"}}
    button.green New Post
    | {{/linkTo}}
    | {{/if}}

    
    | {{#if user}}
    a.button.white(href='/logout')
      | Logout
    | {{ else }}
    a.button.white(href='/login')
      | Login
    | {{/if}}

  .col-1-2
    br
    em.user-email {{user.email}}

  br
  br

  //| {{#if isLoaded}}

  div

    ol.posts

      | {{#each controller}}

      li.post

        div

          
          .actions

            | {{#if user.is_admin}}

            | {{#linkTo "post.edit" this}}
            i.icon-pencil
            | {{/linkTo}}

            <a {{action removePost this}} href="javascript:">
            i.icon-remove
            </a>
            
            | {{/if}}

          .title
            | {{#linkTo "post.index" this}}
            | {{title}}
            | {{/linkTo}}

          .date
            | {{date}}

          .content
            | {{{unbound content}}}


          .footer

            .tags
              ol
                | {{#each tags}}
                li
                  a(href="#") #\{{name}}
                | {{/each}}

            .comments-label
              | {{#linkTo "post.index" this}}
              | comments - {{comments.length}}
              | {{/linkTo}}

      | {{/each}}

  

  //
    | {{else}}

    | {{view App.LoaderView}}

    | {{/if}}

.col-2-12.empty